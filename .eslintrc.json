{
  "root": true,
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["ava", "import", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:ava/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "import/extensions": ["error", "always", { "ignorePackages": true }]
  }
}
